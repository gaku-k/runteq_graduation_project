<head>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<h1>投稿一覧</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <strong><%= post.product_name %></strong>
      <p>Review: <%= post.body %></p>
      <%= render partial: "radar_chart", locals: { post: post } %>
    </li>
  <% end %>
</ul>