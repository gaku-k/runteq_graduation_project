<div class="my-card">
  <%= render "shared/floating_button" %>
  <h1>投稿一覧</h1>

  <ul class="posts-list">
    <% @posts.each do |post| %>
      <li class="post-item">
        <%= link_to post_path(post), class: "post-card-link" do %>
          <div class="image-section">
            <%= render "images", post: post %>
          </div>

          <div class="chart-review-wrapper">
            <div class="chart-section">
              <h2 class="post-title"><%= post.product_name %></h2>
              <%= render partial: "radar_chart", locals: { post: post } %>
            </div>

            <div class="review-section">
              <article>
                <h2 class="post-title italic-title">Review</h2>
                <p><%= post.body %></p>
              </article>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>